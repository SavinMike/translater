<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="5dp"
	android:background="@drawable/list_item_site_location"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:padding="5dp" >

	<TextView
		android:id="@+id/text_product_name"
		style="?attr/header"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textSize="20sp" />

	<TextView
		android:id="@+id/text_product_cost"
		style="?attr/header"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:textStyle="normal" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="right|center_vertical"
		android:gravity="center_vertical"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/image_minus"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:scaleType="fitCenter"
			android:src="@drawable/number_picker_minus"
			tools:ignore="ContentDescription" />

		<TextView
			android:id="@+id/text_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:background="@android:color/white"
			android:minWidth="25dp"
			android:padding="5dp"
			android:singleLine="true" />

		<ImageView
			android:id="@+id/image_plus"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:scaleType="fitCenter"
			android:src="@drawable/number_picker_plus"
			tools:ignore="ContentDescription" />
	</LinearLayout>

</LinearLayout>