<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background"
	android:orientation="vertical"
	android:padding="10dp" >

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="vertical" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<FrameLayout
				android:id="@+id/frag_total_price"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" >
			</FrameLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/table_background_body"
				android:baselineAligned="false"
				android:minHeight="120dp"
				android:orientation="horizontal"
				android:padding="15dp" >

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="5"
					android:orientation="vertical" >

					<TextView
						android:id="@+id/text_product_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/simpleText"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/text_modifiers"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="15dp"
						android:textColor="@color/simpleText" />
				</LinearLayout>

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="2"
					android:orientation="vertical" >

					<ImageView
						android:id="@+id/image_remove"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom|right"
						android:src="@drawable/btn_recycle_bg"
						tools:ignore="ContentDescription" />
				</FrameLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:background="@drawable/table_background_body"
				android:baselineAligned="false"
				android:orientation="vertical" >

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="15dp"
					android:minWidth="25dp"
					android:singleLine="true"
					android:text="@string/how_many"
					android:textColor="@android:color/black" />

				<View style="@style/Nandos.Divider" />

				<LinearLayout
					android:id="@+id/linear_edit_details"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="right|center_vertical"
					android:layout_margin="15dp"
					android:gravity="center_horizontal"
					android:orientation="horizontal" >

					<ImageView
						android:id="@+id/image_minus"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:scaleType="fitCenter"
						android:src="@drawable/number_picker_minus"
						tools:ignore="ContentDescription" />

					<TextView
						android:id="@+id/text_count"
						android:layout_width="wrap_content"
						android:layout_height="30dp"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:background="@drawable/loyalty_input_small"
						android:gravity="center"
						android:minWidth="30dp"
						android:padding="5dp"
						android:singleLine="true" />

					<ImageView
						android:id="@+id/image_plus"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:scaleType="fitCenter"
						android:src="@drawable/number_picker_plus"
						tools:ignore="ContentDescription" />
				</LinearLayout>

				<View style="@style/Nandos.Divider" />

				<include
					android:id="@+id/linear_item_cost"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="15dp"
					layout="@layout/item_local_cost" />

				<View style="@style/Nandos.Divider" />

				<FrameLayout
					android:id="@+id/cont_basket"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" >
				</FrameLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

</LinearLayout>