<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/backgroundColor" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:orientation="vertical"
		android:padding="5dp" >

		<TextView
			android:id="@+id/text_carrot"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="-20dp"
			android:background="@drawable/home_find_nandos_button"
			android:ellipsize="end"
			android:gravity="center"
			android:padding="20dp"
			android:singleLine="true"
			android:textColor="@color/textCarrot"
			android:textSize="30sp" />

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/find_details_box"
			android:orientation="vertical" >

			<fragment
				android:id="@+id/fragment_site_details"
				android:name="com.altaine.nandosuk.ui.fragments.SiteDetailsFragment"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="20dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp" >

				<Button
					android:id="@+id/button_get_directions"
					style="?attr/button"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="@drawable/button_message"
					android:text="Get directions" />

				<FrameLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" >

					<Button
						android:id="@+id/butt_add_site"
						style="?attr/button"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Make favourite"
						android:visibility="gone" />

					<Button
						android:id="@+id/butt_remove_site"
						style="?attr/button"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Remove from favourites"
						android:visibility="gone" />
				</FrameLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

</ScrollView>