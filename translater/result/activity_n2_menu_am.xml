<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

    <FrameLayout
        android:id="@+id/frag_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/text_choose_your_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_total_price"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu_item_header"
        android:gravity="center"
        android:text="@string/menu_header"
        android:textSize="30sp"
        android:textStyle="bold"
        app:typefacePath="@string/nandos_bold"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/text_menu_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menu_item_footer"
        android:padding="10dp"
        android:text="@string/menu_footer"
        android:textColor="@android:color/black"
        app:typefacePath="@string/vista_med"
        tools:ignore="MissingPrefix"/>

    <ListView
        android:id="@+id/list_menu"
        style="?attr/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/text_menu_footer"
        android:layout_below="@id/text_choose_your_food"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:listSelector="@android:color/transparent"/>

</RelativeLayout>