<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <Button
        android:id="@+id/button_add_to_order"
        style="@style/Nandos.Button.Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:typefacePath="@string/nandos_bold"
        android:text="@string/basket_add"
        tools:ignore="MissingPrefix"
        android:textStyle="bold"/>

    <View style="@style/Nandos.Divider"/>

    <Button
        android:id="@+id/button_pay"
        style="@style/Nandos.Button.Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typefacePath="@string/nandos_bold"
        tools:ignore="MissingPrefix"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/basket_checkout"
        android:textStyle="bold"/>

</LinearLayout>