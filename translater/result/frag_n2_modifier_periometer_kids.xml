<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	style="@style/Nandos.Container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<TextView
			android:id="@+id/text_section_number"
			android:layout_width="30sp"
			android:layout_height="30sp"
			android:background="@drawable/circle_red"
			android:gravity="center"
			android:textColor="@android:color/white"
			android:textSize="15sp"
			app:typefacePath="@string/nandos_bold"
			tools:ignore="MissingPrefix" />

		<TextView
			android:id="@+id/text_section_title"
			style="?attr/textViewDark"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/text_section_number"
			android:padding="10dp"
			android:text="@string/pick_one"
			android:textColor="@color/textDefault"
			android:textSize="20sp"
			app:typefacePath="@string/vista_altblack"
			tools:ignore="MissingPrefix" />
	</RelativeLayout>

	<com.altaine.nandosuk.ui.views.n2.PeriometerView
		android:id="@+id/radio_toggle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp" >

		<com.altaine.nandosuk.ui.views.NandosToggleButton
			android:id="@+id/toggle_plain"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginBottom="20dp"
			android:layout_marginTop="20dp"
			android:background="@drawable/button_modifier_tweak_meal"
			android:checked="true"
			android:textColor="@drawable/button_tweak_meal_text"
			android:textOff="Plain...ish"
			android:textOn="Plain...ish" />

		<TextView
			android:id="@+id/image_plain"
			style="@style/Nandos.TextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/toggle_plain"
			android:layout_toLeftOf="@id/toggle_plain"
			android:gravity="center_vertical"
			android:text="Plain...ish  \nMarinated in PERi-PERi but with no added spice. As mild as we go."
			android:textColor="#FF676547"
			android:textSize="16sp" />

		<com.altaine.nandosuk.ui.views.NandosToggleButton
			android:id="@+id/toggle_tamer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@id/toggle_plain"
			android:layout_marginBottom="20dp"
			android:layout_marginTop="20dp"
			android:background="@drawable/button_modifier_tweak_meal"
			android:textColor="@drawable/button_tweak_meal_text"
			android:textOff="PERi-tamer"
			android:textOn="PERi-tamer" />

		<TextView
			android:id="@+id/image_tamer"
			style="@style/Nandos.TextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/toggle_tamer"
			android:layout_toLeftOf="@id/toggle_tamer"
			android:scaleType="fitStart"
			android:text="PERi-tamer   \nGrilled in PERi-tamer - A mild, sweet baste that helps quell the heat of our marinade. Or choose from the PERi-ometer."
			android:textColor="#FFF57319"
			android:textSize="16sp" />

		<com.altaine.nandosuk.ui.views.NandosToggleButton
			android:id="@+id/toggle_periometer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@id/toggle_tamer"
			android:layout_marginBottom="20dp"
			android:layout_marginTop="20dp"
			android:background="@drawable/button_modifier_tweak_meal"
			android:checked="false"
			android:textColor="@drawable/button_tweak_meal_text"
			android:textOff="PERi-ometer"
			android:textOn="PERi-ometer" />

		<ImageView
			android:id="@+id/image_ometer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/toggle_periometer"
			android:layout_alignTop="@id/toggle_periometer"
			android:layout_marginBottom="-20dp"
			android:layout_marginTop="-20dp"
			android:layout_toLeftOf="@id/toggle_tamer"
			android:scaleType="fitStart"
			android:src="@drawable/peri_3" />
	</com.altaine.nandosuk.ui.views.n2.PeriometerView>

	<FrameLayout
		android:id="@+id/container_periometer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

</LinearLayout>