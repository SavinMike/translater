<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:visibility="gone">

	<LinearLayout
		android:id="@+id/linear_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<LinearLayout
			style="@style/Nandos.Container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<TextView
				style="@style/Nandos.TextView.TitleCrazy"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/final_thanks"
				android:textSize="25sp" />

			<TextView
				style="@style/Nandos.TextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:text="@string/final_prepare" />

			<LinearLayout
				style="@style/Nandos.Container.Green"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" >

				<TextView
					style="@style/Nandos.TextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/final_time"
					android:textColor="@color/whiteText" />

				<TextView
					android:id="@+id/text_pickup_time_and_site_name"
					style="@style/Nandos.TextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/whiteText" />
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			style="@style/Nandos.Container.Brown"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/text_when_you_come"
				style="@style/Nandos.TextView.TitleNorm"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:text="@string/final_remember" />

			<TextView
				android:id="@+id/text_r1"
				style="@style/Nandos.TextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:text="@string/final_remember_queue" />

			<TextView
				android:id="@+id/text_r2"
				style="@style/Nandos.TextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:text="@string/final_remember_worry" />

			<TextView
				android:id="@+id/text_r4"
				style="@style/Nandos.TextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:text="@string/final_rememember_chips" />
		</LinearLayout>

		<LinearLayout
			style="@style/Nandos.Container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/text_collection_from"
				style="@style/Nandos.TextView.TitleNorm"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:text="@string/final_collect_from" />

			<TextView
				android:id="@+id/text_site_name"
				style="@style/Nandos.TextView.Bold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/text_address1"
				style="@style/Nandos.TextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/text_address2"
				style="@style/Nandos.TextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="gone" />

			<TextView
				android:id="@+id/text_town"
				style="@style/Nandos.TextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/text_postcode"
				style="@style/Nandos.TextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

			<include
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginBottom="20dp"
				android:layout_marginTop="20dp"
				layout="@layout/item_divider" />

			<TextView
				style="@style/Nandos.TextView.Bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/final_need_to_speak_order" />

			<TextView
				style="@style/Nandos.TextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/final_call" />

			<TextView
				android:id="@+id/text_phone"
				style="@style/Nandos.TextView.Bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="15dp" />

			<Button
				android:id="@+id/button_map"
				style="@style/Nandos.Button.Red"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/final_directions" />
		</LinearLayout>
	</LinearLayout>

</ScrollView>