<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/block_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dialog_change_order_time_text_header"
            style="@style/Nandos.TextView.TitleCrazy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="Choose a new collection time"
            android:textSize="18sp"/>

        <include
            layout="@layout/item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/dialog_change_order_time_text_description"
            style="@style/Nandos.TextView.TitleCrazy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="When would you like to collect?"
            android:textSize="18sp"
            tools:ignore="MissingPrefix"/>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/dialog_change_order_time_button_ok"
            style="@style/Nandos.Button.Red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Save"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/dialog_change_order_time_progress"
        style="@style/Nandos.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"/>
</FrameLayout>