<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        style="@style/Nandos.Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_section_number"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/circle_red"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="gone"
                app:typefacePath="@string/nandos_bold"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/text_header"
                style="?attr/textViewDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_section_number"
                android:padding="10dp"
                android:textColor="@color/textDefault"
                android:textSize="18sp"
                android:visibility="gone"
                app:typefacePath="@string/vista_altblack"
                tools:ignore="MissingPrefix"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:id="@+id/linear_modifiers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:text="*Excludes Garlic Bread"
            android:textColor="@color/text_color_default"
            tools:ignore="MissingPrefix"
            android:textStyle="italic"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/frag_n2_modifier_altogether_linear_layout_content"
        android:layout_height="wrap_content"/>

</LinearLayout>