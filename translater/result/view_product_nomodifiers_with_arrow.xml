<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >

		<com.altaine.nandosuk.ui.views.RotatedImageView
			android:id="@+id/image_arrow"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/arrow_down"
			android:visibility="gone"
			tools:ignore="ContentDescription" />

		<TextView
			android:id="@+id/text_name"
			style="?attr/header"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="3dp"
			android:layout_weight="1"
			android:ellipsize="end"
			android:singleLine="true"
			android:textSize="16sp"
			android:textStyle="bold" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="2dp"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/text_side_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:visibility="gone" />

			<TextView
				android:id="@+id/text_cost"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true" />
		</LinearLayout>

		<ImageView
			android:id="@+id/image_minus"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:scaleType="fitCenter"
			android:src="@drawable/number_picker_minus"
			tools:ignore="ContentDescription" />

		<com.altaine.nandosuk.ui.views.CallbackEditText
			android:id="@+id/edit_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="3dp"
			android:layout_marginTop="3dp"
			android:background="@android:color/white"
			android:gravity="center"
			android:inputType="number"
			android:minWidth="30dp"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:text="0"
			tools:ignore="HardcodedText" />

		<ImageView
			android:id="@+id/image_plus"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:scaleType="fitCenter"
			android:src="@drawable/number_picker_plus"
			tools:ignore="ContentDescription" />
	</LinearLayout>

	<TextView
		android:id="@+id/text_describe"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:textSize="14sp"
		android:visibility="gone" />

</LinearLayout>