<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/btn_settings"
        android:layout_alignParentRight="true"
        android:src="@drawable/filter_button"
        android:layout_width="48dp"
        android:padding="8dp"
        android:layout_height="48dp"/>

    <ImageView
        android:id="@+id/btn_favorites"
        android:layout_width="48dp"
        android:padding="8dp"
        android:src="@drawable/star_button"
        android:layout_toLeftOf="@id/btn_settings"
        android:layout_height="48dp"/>

    <LinearLayout
        android:id="@+id/root"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/btn_favorites"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/Nandos.Button.Green"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/your_order_total"
            android:textAppearance="@style/Nandos.Text"
            android:textColor="@color/whiteText"
            android:textSize="22sp"
            app:typefacePath="@string/nandos_bold"
            tools:ignore="MissingPrefix"/>

        <ViewSwitcher
            android:id="@+id/switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingRight="4dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/whiteText"
                app:typefacePath="@string/vista_altblack"
                tools:ignore="MissingPrefix"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/progress_bar"/>
        </ViewSwitcher>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            tools:ignore="ContentDescription"/>

    </LinearLayout>
</RelativeLayout>