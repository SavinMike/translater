<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/block_bg"
	android:baselineAligned="false"
	android:orientation="horizontal"
	android:padding="20dp" >

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/text_product_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/simpleText"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/text_product_second"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/simpleText"
			android:textSize="14sp"
			android:textStyle="bold"
			android:visibility="gone" />

		<TextView
			android:id="@+id/text_modifiers"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="15dp"
			android:textColor="@color/simpleText" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linear_edit_details"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:orientation="vertical"
		android:padding="5dp" >

		<TextView
			android:id="@+id/text_price"
			style="@style/Nandos.TextView.Header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:singleLine="true"
			android:textColor="@color/textDefault"
			android:textSize="14sp"
			android:textStyle="normal"
			android:visibility="gone"
			app:typefacePath="@string/vista_altblack"
			tools:ignore="MissingPrefix" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right|center_vertical"
			android:gravity="center_vertical"
			android:orientation="horizontal" >

			<ImageView
				android:id="@+id/image_minus"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:scaleType="fitCenter"
				android:src="@drawable/number_picker_minus"
				tools:ignore="ContentDescription" />

			<TextView
				android:id="@+id/text_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:background="@drawable/loyalty_input_small"
				android:gravity="center_horizontal"
				android:minWidth="25dp"
				android:padding="5dp"
				android:singleLine="true" />

			<ImageView
				android:id="@+id/image_plus"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:scaleType="fitCenter"
				android:src="@drawable/number_picker_plus"
				tools:ignore="ContentDescription" />
		</LinearLayout>

		<Button
			android:id="@+id/button_edit"
			style="?attr/button"
			android:layout_width="match_parent"
			android:layout_height="35dp"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="5dp"
			android:text="Edit" />
	</LinearLayout>

</LinearLayout>