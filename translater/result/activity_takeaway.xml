<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="10dp" >

		<LinearLayout
			android:id="@+id/container_nearest"
			style="@style/Nandos.Container"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:orientation="vertical"
			android:visibility="gone" >

			<TextView
				style="@style/Nandos.TextView.TitleCrazy"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:text="@string/your_nearest_nando_s_is_" />

			<include
				android:id="@+id/item_nearest"
				android:layout_width="fill_parent"
				android:layout_height="50dp"
				android:layout_marginBottom="15dp"
				layout="@layout/item_site_details" />

			<include
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginBottom="20dp"
				android:layout_marginTop="20dp"
				layout="@layout/item_divider" />

			<TextView
				style="@style/Nandos.TextView.TitleSmall"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/can_apos_t_see" />

			<TextView
				style="@style/Nandos.TextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/we_apos_re" />
		</LinearLayout>

		<LinearLayout
			style="@style/Nandos.Container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<TextView
				style="@style/Nandos.TextView.TitleNorm"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:text="@string/browse_all_trial_restaurants" />

			<fragment
				android:id="@+id/frag_browse_rest"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				class="com.altaine.nandosuk.ui.fragments.n2.Browse1Restaraunts" />
		</LinearLayout>

		<fragment
			android:id="@+id/frag_special_dietary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			class="com.altaine.nandosuk.ui.fragments.n2.SpecialDietaryFragment" />
	</LinearLayout>

</ScrollView>