<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/layout_footer_basket"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/Nandos.Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <include
            layout="@layout/item_local_cost"
            android:id="@+id/linear_item_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/fragment_basket"
            android:id="@+id/frame_order_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
