<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/root"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background"
	android:padding="10dp" >

	<LinearLayout
		android:id="@+id/linear_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/table_background"
		android:orientation="vertical" >

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="15dp"
			android:layout_marginLeft="25dp"
			android:text="@string/account_title"
			android:textColor="@color/textDefault"
			android:textSize="25sp"
			android:textStyle="bold"
			app:typefacePath="@string/nandos_bold"
			tools:ignore="MissingPrefix" />

		<View
			style="@style/Nandos.Divider"
			android:layout_marginBottom="15dp" />

		<EditText
			android:id="@+id/edittext_first_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:background="@drawable/loyalty_input"
			android:hint="@string/register_name"
			android:inputType="text"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:singleLine="true"
			android:textColor="#222222" />

		<TextView
			android:id="@+id/nameTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="5dp"
			android:text="@string/register_name_error"
			android:textColor="@color/textDefault"
			android:textSize="15sp"
			android:textStyle="bold" />

		<EditText
			android:id="@+id/edittext_last_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:layout_marginTop="15dp"
			android:background="@drawable/loyalty_input"
			android:hint="@string/register_surname"
			android:inputType="text"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:singleLine="true"
			android:textColor="#222222" />

		<TextView
			android:id="@+id/surnameTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="5dp"
			android:text="@string/register_surname_error"
			android:textColor="@color/textDefault"
			android:textSize="15sp"
			android:textStyle="bold" />

		<EditText
			android:id="@+id/edittext_email"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:layout_marginTop="15dp"
			android:background="@drawable/loyalty_input"
			android:hint="@string/register_email"
			android:inputType="textEmailAddress"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:singleLine="true"
			android:textColor="#222222" />

		<TextView
			android:id="@+id/emailTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="5dp"
			android:text="@string/register_email_error"
			android:textColor="@color/textDefault"
			android:textSize="15sp"
			android:textStyle="bold" />

		<EditText
			android:id="@+id/edittext_mobile"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:layout_marginTop="15dp"
			android:background="@drawable/loyalty_input"
			android:hint="@string/register_mobile"
			android:inputType="phone"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:singleLine="true"
			android:textColor="#222222" />

		<TextView
			android:id="@+id/mobileTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="5dp"
			android:text="@string/register_mobile_error"
			android:textColor="@color/textDefault"
			android:textSize="15sp"
			android:textStyle="bold" />

		<EditText
			android:id="@+id/edittext_postcode"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:layout_marginTop="15dp"
			android:background="@drawable/loyalty_input"
			android:hint="@string/register_postcode"
			android:inputType="text"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:singleLine="true"
			android:textColor="#222222" />

		<TextView
			android:id="@+id/postcodeTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="5dp"
			android:text="@string/register_postcode_error"
			android:textColor="@color/textDefault"
			android:textSize="15sp"
			android:textStyle="bold" />

        <EditText
            android:id="@+id/cardValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/loyalty_input"
            android:hint="@string/register_card"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/cardError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="@string/register_card_error"
            android:textColor="@color/textDefault"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
			android:id="@+id/button_change_password"
			style="@style/Nandos.Button.Red"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:layout_marginTop="15dp"
			android:text="Change password"
			android:textStyle="bold" />

		<!-- <TextView -->
		<!-- android:layout_width="wrap_content" -->
		<!-- android:layout_height="wrap_content" -->
		<!-- android:layout_marginBottom="5dp" -->
		<!-- android:layout_marginLeft="25dp" -->
		<!-- android:text="@string/account_your_password" -->
		<!-- android:textColor="#222222" -->
		<!-- android:textSize="15sp" -->
		<!-- android:textStyle="bold" -->
		<!-- app:typefacePath="@string/vista_altblack" -->
		<!-- tools:ignore="MissingPrefix" /> -->


		<!-- <EditText -->
		<!-- android:id="@+id/edittext_password" -->
		<!-- android:layout_width="match_parent" -->
		<!-- android:layout_height="wrap_content" -->
		<!-- android:layout_marginBottom="15dp" -->
		<!-- android:layout_marginLeft="25dp" -->
		<!-- android:layout_marginRight="25dp" -->
		<!-- android:background="@drawable/loyalty_input" -->
		<!-- android:inputType="textPassword" -->
		<!-- android:paddingLeft="10dp" -->
		<!-- android:paddingRight="10dp" -->
		<!-- android:singleLine="true" -->
		<!-- android:textColor="#222222" /> -->

		<View
			style="@style/Nandos.Divider"
			android:layout_marginBottom="15dp" />

		<View
			style="@style/Nandos.Divider"
			android:layout_marginTop="15dp"
			android:visibility="gone" />

		<Button
			android:id="@+id/button_select_date"
			style="?attr/spinner"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="22dp" />

        <CheckBox
			android:id="@+id/check_spam"
			style="@style/Nandos.TextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:text="Sign me up for Nando&apos;s treats and hot news by email." />

		<Button
			android:id="@+id/button_update"
			style="@style/Nandos.Button.Red"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:layout_marginTop="10dp"
			android:text="@string/account_update"
			android:textStyle="bold" />

		<Button
			android:id="@+id/button_view_favour"
			style="@style/Nandos.Button.Red"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:layout_marginTop="10dp"
			android:text="@string/account_favorites"
			android:visibility="gone" />
	</LinearLayout>

</ScrollView>