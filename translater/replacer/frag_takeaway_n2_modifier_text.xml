<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/modifier_sides_main_bg"
              android:focusableInTouchMode="false"
              android:orientation="vertical"
              android:padding="10dp">

    <TextView
        android:id="@+id/text_fragment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_sides_title"
        android:textColor="@color/whiteText"
        android:textSize="18sp"
        app:typefacePath="@string/vista_altblack"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/text_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/no_sides_details"
        android:textColor="@color/whiteText"
        android:textSize="16sp"
        app:typefacePath="@string/vista_book"
        tools:ignore="MissingPrefix"/>

</LinearLayout>