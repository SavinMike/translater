<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginLeft="5dp"
	android:layout_marginRight="5dp"
	android:background="@color/backgroundColor"
	android:layout_marginTop="5dp"
	android:orientation="vertical" >

	<TextView
		android:id="@+id/text_carrot"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="-20dp"
		android:background="@drawable/home_find_nandos_button"
		android:gravity="center"
		android:text="Favourite Nando's"
		android:singleLine="true"
		android:ellipsize="end"
		android:textColor="@color/textCarrot"
		android:textSize="30sp" />

	<ListView
	    android:padding="20dp"
		android:id="@+id/listview_restaurants"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:cacheColorHint="@android:color/transparent"
		android:divider="@android:color/transparent"
		android:dividerHeight="5dp"
		android:listSelector="@android:color/transparent" />

	<TextView
		android:id="@+id/textview_empty_list"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:text="No results"
		android:textSize="30sp"
		android:visibility="gone" />

</LinearLayout>