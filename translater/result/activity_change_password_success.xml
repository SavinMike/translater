<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/root"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="15dp" >

	<TextView
		android:id="@+id/text_your_password"
		style="?attr/header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="Your password has changed"
		android:textSize="30sp"
		android:textStyle="bold" />

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="Your password has now been changed - youâ€™re good to go! Click the button below to login and start your order."
		android:textColor="@color/simpleText" />

	<Button
		android:id="@+id/button_login_and_order"
		style="?attr/button"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:text="Login and start my order" />

</LinearLayout>