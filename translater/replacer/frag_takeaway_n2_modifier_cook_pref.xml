<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/linear_container"
	style="@style/Nandos.Container"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<TextView
		android:id="@+id/text_section_number"
		android:layout_width="30sp"
		android:layout_height="30sp"
		android:background="@drawable/circle_red"
		android:gravity="center"
		android:textColor="@android:color/white"
		android:textSize="15sp"
		app:typefacePath="@string/nandos_bold"
		tools:ignore="MissingPrefix" />

	<TextView
		android:id="@+id/text_header"
		style="?attr/textViewDark"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/text_section_number"
		android:padding="10dp"
		android:text="@string/tweak_your_meal"
		android:textColor="@color/textDefault"
		android:textSize="18sp"
		app:typefacePath="@string/vista_altblack"
		tools:ignore="MissingPrefix" />

	<TextView
		android:id="@+id/text_describe"
		style="?attr/header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/text_section_number"
		android:gravity="left"
		android:paddingTop="5dp"
		android:textColor="@color/simpleText"
		android:textSize="16sp"
		android:visibility="gone" />

	<com.altaine.nandosuk.ui.views.NandosRadioGroup
		android:id="@+id/radio_toggle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/text_describe"
		android:layout_marginTop="20dp"
		android:orientation="horizontal" />

</RelativeLayout>