<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/root"
        style="@style/Nandos.Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_reset_password"
            style="@style/Nandos.TextView.TitleCrazy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Choose a new password" />

        <EditText
            android:id="@+id/edit_new_password"
            style="?attr/editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/loyalty_input"
            android:hint="Enter a new password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/passwordTitle"
            style="@style/Nandos.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/register_password_requarements"
            android:textColor="@color/grayText"
            android:textSize="13sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/edit_new_password_conf"
            style="?attr/editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/loyalty_input"
            android:hint="Type it again"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/confirmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/register_confirm_error"
            android:textColor="@color/textDefault"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_update_password"
            style="@style/Nandos.Button.Red"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="24dp"
            android:text="Set new password" />
    </LinearLayout>

</ScrollView>