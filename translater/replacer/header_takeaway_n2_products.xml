<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Nandos.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_item_header"
    android:orientation="vertical">

	<TextView
		android:id="@+id/text_category_header"
		style="@style/Nandos.TextView.TitleCrazy"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:visibility="gone"
		tools:ignore="MissingPrefix" />

	<TextView
		android:id="@+id/text_category_describe"
		style="@style/Nandos.TextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone" />

</LinearLayout>