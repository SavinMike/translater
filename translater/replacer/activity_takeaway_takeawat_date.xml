<?xml version="1.0" encoding="utf-8"?>
<com.altaine.nandosuk.ui.views.SlideOut xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/slide"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/backgroundColor" >

	<fragment
		android:id="@+id/frag_map"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		class="com.google.android.gms.maps.SupportMapFragment" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="100dp"
		app:layout_marginSlide="50dp"
		android:background="?android:attr/windowBackground"
		android:clickable="true"
		android:orientation="vertical" >

		<ImageView
			android:id="@+id/image_slide"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:scaleType="fitCenter"
			android:src="@drawable/takeaway_slide_arrow"
			tools:ignore="ContentDescription" />

		<include
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			layout="@layout/item_takeawat_date_header" />

		<com.altaine.nandosuk.ui.views.SlideScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="10dp" >

				<FrameLayout
					style="@style/Nandos.Container"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" >

					<fragment
						android:id="@+id/fragment_takeaway_date"
						android:name="com.altaine.nandosuk.ui.fragments.TakeawayDateFragment"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center" />
				</FrameLayout>

				<LinearLayout
					style="@style/Nandos.Container"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical" >

					<TextView
						style="@style/Nandos.TextView.TitleSmall"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/opening_times" />

					<TextView
						android:id="@+id/text_opening_times"
						style="@style/Nandos.TextView"
						android:layout_width="match_parent"
						android:layout_height="wrap_content" />
				</LinearLayout>

				<LinearLayout
					style="@style/Nandos.Container"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical" >

					<TextView
						android:id="@+id/text_name"
						style="@style/Nandos.TextView.Big"
						android:layout_width="match_parent"
						android:layout_height="wrap_content" />

					<TextView
						android:id="@+id/text_address"
						style="@style/Nandos.TextView"
						android:layout_width="match_parent"
						android:layout_height="wrap_content" />

					<include
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_marginBottom="20dp"
						android:layout_marginTop="20dp"
						layout="@layout/item_divider" />

					<LinearLayout
						android:id="@+id/cont_amenities"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal" >
					</LinearLayout>
				</LinearLayout>

				<fragment
					android:id="@+id/frag_cancel_order"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					class="com.altaine.nandosuk.ui.fragments.CancelOreder" />
			</LinearLayout>
		</com.altaine.nandosuk.ui.views.SlideScrollView>
	</LinearLayout>

</com.altaine.nandosuk.ui.views.SlideOut>