<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/linear_container"
	style="@style/Nandos.Container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:dividerPadding="20dp"
	android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<TextView
			android:id="@+id/text_section_number"
			android:layout_width="30sp"
			android:layout_height="30sp"
			android:background="@drawable/circle_red"
			android:gravity="center"
			android:textColor="@android:color/white"
			android:textSize="15sp"
			app:typefacePath="@string/nandos_bold"
			tools:ignore="MissingPrefix" />

		<TextView
			android:id="@+id/text_section_title"
			style="?attr/textViewDark"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/text_section_number"
			android:padding="10dp"
			android:text="@string/tweak_your_meal"
			android:textColor="@color/textDefault"
			android:textSize="20sp"
			app:typefacePath="@string/vista_altblack"
			tools:ignore="MissingPrefix" />
	</RelativeLayout>

</LinearLayout>