<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background"
	android:padding="10dp" >

	<FrameLayout
		android:id="@+id/frag_total_price"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp" />

	<LinearLayout
		android:id="@+id/layout_favorites_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/frag_total_price"
		android:layout_marginBottom="10dp"
		android:background="@drawable/table_background_body"
		android:orientation="vertical"
		android:padding="15dp"
		android:visibility="gone" >

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/table_backgroung_header"
			android:gravity="left"
			android:text="@string/favorites_title"
			android:textSize="25sp"
			android:textStyle="bold"
			app:typefacePath="@string/nandos_bold"
			tools:ignore="MissingPrefix" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:background="@drawable/table_backgroung_header"
			android:text="@string/favorites_title_details"
			android:textColor="@android:color/black"
			android:textSize="15sp" />
	</LinearLayout>

	<ExpandableListView
		android:id="@+id/listview_favourite"
		style="?attr/list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/layout_favorites_title"
		android:childDivider="@android:color/transparent"
		android:divider="@android:color/transparent"
		android:dividerHeight="1dp"
		android:groupIndicator="@android:color/transparent"
		android:listSelector="@android:color/transparent" />

	<TextView
		android:id="@+id/textview_empty_list"
		style="@style/Nandos.TextView.TitleCrazy"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:text="Empty"
		android:visibility="gone" />

</RelativeLayout>