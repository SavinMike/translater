<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_background_body"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

    <RelativeLayout
        android:id="@+id/cont_plus_minus"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_cost_linear_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_side_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/textDefault"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:typefacePath="@string/nandos_bold"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/text_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textDefault"
                android:textSize="14sp"
                android:textStyle="normal"
                app:typefacePath="@string/vista_altblack"
                tools:ignore="MissingPrefix"/>
        </LinearLayout>

        <com.altaine.nandosuk.ui.views.PlusMinusView
            android:id="@+id/plus_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_cost_linear_container"/>

        <ImageView
            android:id="@+id/image_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_cost_linear_container"
            android:src="@drawable/sold_out"
            android:visibility="gone"/>
    </RelativeLayout>


    <ImageView
        android:layout_toLeftOf="@id/cont_plus_minus"
        android:layout_centerVertical="true"
        android:id="@+id/view_ingridients"
        android:layout_width="32dp"
        android:src="@drawable/btn_product_ingredient"
        android:adjustViewBounds="true"
        android:visibility="visible"
        android:padding="4dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/view_ingridients"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name"
            style="@style/Nandos.TextView.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_desc"
            style="@style/Nandos.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>
    </LinearLayout>

</RelativeLayout>
