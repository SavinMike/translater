<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/table_background_body"
	android:orientation="vertical"
	android:padding="10dp" >

	<TextView
		android:id="@+id/text_section_title"
		style="@style/Nandos.TextView.TitleCrazy"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Make it a meal with sides" />

	<TextView
		android:id="@+id/text_fragment_header"
		style="@style/Nandos.TextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="10dp"
		android:text="Add one or two to create your ideal meal. Or order a selection to share." />

</LinearLayout>