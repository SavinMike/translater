<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Nandos.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_header_pickup_date"
        style="@style/Nandos.TextView.TitleCrazy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:text="@string/when_would_you_like_to_collect_"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/button_select_date"
        style="@style/Nandos.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/button_select_time"
        style="@style/Nandos.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:spinnerMode="dropdown" />

    <TextView
        style="@style/Nandos.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/we_apos_re2"
        android:visibility="gone" />

    <include
        android:id="@+id/divider"
        layout="@layout/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/button_proceed"
        style="@style/Nandos.Button.Red"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:enabled="false"
        android:text="@string/i_apos_m_hungry_let_apos_s_order_" />

</LinearLayout>