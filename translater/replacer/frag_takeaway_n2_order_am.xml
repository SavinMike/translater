<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/linear_container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	<FrameLayout
		style="@style/Nandos.Container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp" >

		<include
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			layout="@layout/item_add_fav" />
	</FrameLayout>

	<LinearLayout
		style="@style/Nandos.Container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<include
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			layout="@layout/item_local_cost" />

		<TextView
			style="@style/Nandos.TextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:text="Pssst. Are you sure you\'ve got everything? Once you hit that button we won\'t be able to change your order. Remember, if you have any special dietary requirements or food allergies speak to the restaurant manager and place your order by phone instead." />

		<Button
			android:id="@+id/button_pay"
			style="@style/Nandos.Button.Red"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:text="Continue and pay" />
	</LinearLayout>

</LinearLayout>