<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/linear_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/recovery_faq_title"
            android:textSize="30sp"
            app:typefacePath="@string/nandos_bold"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/textview_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/recovery_faq"
            android:textColor="@color/simpleText"
            android:textSize="16sp" />

        <View style="@style/Nandos.Divider" />

        <EditText
            android:id="@+id/edittext_emailPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/loyalty_input"
            android:hint="@string/login_email_or_phone"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:ignore="TextFields" />

        <View style="@style/Nandos.Divider" />

        <Button
            android:id="@+id/button_submit"
            style="@style/Nandos.Button.Red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/recovery_submit_password"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>